<%= form_for([:admin, train]) do |f| %>
<%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :route_id %>
    <%= f.collection_select :route_id, Route.all, :id, :title %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
