<tr>
  <td>
    <div id="route_title_<%=route.id %>">
    <%= route.title %>
    </div>
    <%= render 'form', route: route, hidden: true %>
  </td>
  
  <td><%= link_to 'Show', [:admin, route], class: "btn btn-sm btn-primary" %></td>
  <td><%= link_to 'Edit', '', class: 'edit_route', data: {route_id: route.id} %></td>
  <td><%= link_to 'Destroy', [:admin, route], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %></td>
</tr>